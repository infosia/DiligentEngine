function(custom_configure_build)
    if(CMAKE_CONFIGURATION_TYPES)
        set(DEBUG_CONFIGURATIONS DEBUG CACHE INTERNAL "" FORCE)
        set(RELEASE_CONFIGURATIONS RELEASE CACHE INTERNAL "" FORCE)

        # CMAKE_CONFIGURATION_TYPES variable defines build configurations generated by cmake
        set(CMAKE_CONFIGURATION_TYPES Debug Release CACHE STRING "Configuration types: Debug, Release" FORCE)

        set(CMAKE_CXX_FLAGS_RELEASE "/MT" CACHE INTERNAL "" FORCE)
        set(CMAKE_C_FLAGS_RELEASE "/MT" CACHE INTERNAL "" FORCE)
	set(CMAKE_CXX_FLAGS_DEBUG "/MTd" CACHE INTERNAL "" FORCE)
	set(CMAKE_C_FLAGS_DEBUG "/MTd" CACHE INTERNAL "" FORCE)

	# set(CMAKE_INTERPROCEDURAL_OPTIMIZATION FALSE)
	#        set(CMAKE_EXE_LINKER_FLAGS_RELEASEMT "/OPT:REF" CACHE INTERNAL "" FORCE)
	#        set(CMAKE_SHARED_LINKER_FLAGS_RELEASEMT "/OPT:REF" CACHE INTERNAL "" FORCE)
    endif()
endfunction()

function(custom_pre_configure_target TARGET)
    target_compile_definitions(${TARGET} PUBLIC _ITERATOR_DEBUG_LEVEL=0)
    set(TARGET_CONFIGURATION_COMPLETE TRUE PARENT_SCOPE)
endfunction()
